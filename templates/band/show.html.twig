{% extends 'base.html.twig' %}

{% block title %}Band{% endblock %}

{% block body %}
    <h1>Band</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ band.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ band.name }}</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>{{ band.genre.value }}</td>
        </tr>
        </tbody>
    </table>
    <div class="flex flex-row p-4">
        <button class="btn btn-soft btn-primary">
            <a href="{{ path('app_band_index') }}">Back to list</a>
        </button>

        <button class="btn btn-soft btn-primary">
            <a href="{{ path('app_band_edit', {'id': band.id}) }}">Edit</a>
        </button>
        {{ include('band/_delete_form.html.twig') }}
    </div>



{% endblock %}
