<!DOCTYPE html>
<html data-theme="garden">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Log in!{% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>


<body class="min-h-screen flex items-center justify-center bg-base-100 text-base-content">
<div class="w-full max-w-md p-8 bg-base-200 rounded-xl shadow-xl">
    <h1 class="h3 mb-6 text-2xl text-center font-bold text-primary">Register</h1>
    {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

    {% if form_errors(registrationForm) %}
        <div class="alert alert-error mb-4">
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}

    <div class="form-control">
        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'input input-bordered w-full', 'autocomplete': 'email', 'placeholder': 'Enter your email'}}) }}
        {{ form_errors(registrationForm.email) }}
    </div>

    <div class="form-control">
        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'label'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input input-bordered w-full', 'autocomplete': 'new-password', 'placeholder': 'Create a strong password'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}
    </div>

    <div class="form-control flex items-center">
        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox checkbox-primary mr-2'}}) }}
        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'label cursor-pointer'}}) }}
        {{ form_errors(registrationForm.agreeTerms) }}
    </div>

    <div class="flex flex-col items-center justify-center space-y-4 mt-6">
        <button type="submit" class="btn btn-lg btn-primary w-full">Register</button>
        <div class="text-center">
            <p>Already have an account? <a href="{{ path('app_login') }}" class="link link-primary">Sign in now</a></p>
        </div>
    </div>

    {{ form_end(registrationForm) }}
</div>
</body>
</html>
