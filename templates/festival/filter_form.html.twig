{{ form_start(form, { method: 'get' }) }}
<div class="max-w-md mx-auto mb-8">
    <label for="{{ form.search.vars.id }}" class="sr-only">Search</label>
    <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg class="w-5 h-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-4.35-4.35M16.65 16.65A7.5 7.5 0 1 0 3 10a7.5 7.5 0 0 0 13.65 6.65z"/>
            </svg>
        </div>
        {{ form_widget(form.search, {
            attr: {
                class: 'block w-full p-3 pl-10 text-sm border rounded-lg bg-base-200 text-base-content border-base-300 focus:ring-primary focus:border-primary',
                placeholder: 'Search by name or location'
            }
        }) }}
        <button type="submit"
                class="absolute right-2.5 bottom-2.5 bg-primary text-primary-content hover:bg-primary-focus font-medium rounded-lg text-sm px-4 py-1.5 focus:outline-none focus:ring-4 focus:ring-primary/50">
            Search
        </button>
    </div>
</div>
{{ form_end(form) }}
