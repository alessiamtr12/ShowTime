{% extends 'base.html.twig' %}

{% block title %}Bookings{% endblock %}

{% block body %}

    <h1>Bookings</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Festival</th>
        </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr class="hover:bg-base-300">
                <td>{{ booking.id }}</td>
                <td>{{ booking.name }}</td>
                <td>{{ booking.email }}</td>
                <td>{{ booking.bookedFestival.id }}</td>


            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
